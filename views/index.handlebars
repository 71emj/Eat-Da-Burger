<main class="row">
   <div class="header col s6">
      <br>
      <div class="row">
         <div class="align-padding">
            <div class="input-field col s6" style="margin-left: 0;">
               <textarea id="burger_name" class="white-text materialize-textarea" data-length="15"></textarea>
               <label for="burger_name" class="white-text">What Burger Would You Like to Eat Today?</label>
            </div>
            <div class="col s3" style="margin-left: 24px;">
               <button id="burger_new" class="hoverable btn-large waves-effect waves-light purple ">Da Burger</button>
            </div>
         </div>
      </div>
      <ul>
         {{#each burgers}}
         <li>
            <span>{{this.burger_name}}</span>
            <span>
				<button class="btn burger_eat">Eat Da Burger</button>
			</span>
         </li>
         {{/each}}
      </ul>
   </div>
   <div class="body col s6">
      <ul>
         {{#each devoured}}
         <li>
            <span>{{this.burger_name}}</span>
            <span>
				<button class="btn disabled">YUMMMMM</button>
			</span>
         </li>
         {{/each}}
      </ul>
   </div>
</main>